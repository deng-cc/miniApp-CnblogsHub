

<template name="commentRight">
    <view class="comment-container-right">
        <view class="comment-right shadow wx-bg-green">
            <view class="comment-via-right">
                <text class="comment-via-date wx-light">{{DateAdded}}</text>
                <text class="comment-via-nickname wx-blue">{{UserDisplayName}}</text>
            </view>
            <view class="comment-content-right">
                <text style="color:#ffffff">{{Content}}</text>
            </view>
        </view>
        <image src="{{UserIconUrl}}"></image>
    </view>
</template>